{{template "admin" .}}

{{define "content"}}

{{$res := index .Data "reservation"}}
{{$src := index .StringMap "src"}}

<div class="col-md-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Reservation Details</h4>
      <p class="card-description">
        <strong>Arrival:</strong> {{humanDate $res.StartDate}}<br>
        <strong>Departure:</strong> {{humanDate $res.EndDate}}<br>
        <strong>Room:</strong> {{$res.Room.RoomName}}
      </p>
      <form action="/admin/reservations/{{$src}}/{{$res.ID}}" method="post" class="forms-sample" novalidate>
        <input type="hidden" name="csrf_token" value="{{.CSRFToken}}">

        <div class="form-group">
          <label for="first_name">First Name</label>
          {{with .Form.Errors.Get "first_name"}}
          <label class="text-danger">{{.}}</label>
          {{end}}
          <input class="form-control {{with .Form.Errors.Get " first_name"}} is-invalid {{end}}" id="first_name"
            name="first_name" value="{{$res.FirstName}}" type="text" autocomplete="off" required>
        </div>
        <div class="form-group">
          <label for="last_name">Last Name</label>
          {{with .Form.Errors.Get "last_name"}}
          <label class="text-danger">{{.}}</label>
          {{end}}
          <input class="form-control {{with .Form.Errors.Get " last_name"}} is-invalid {{end}}" id="last_name"
            name="last_name" value="{{$res.LastName}}" type="text" autocomplete="off" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          {{with .Form.Errors.Get "email"}}
          <label class="text-danger">{{.}}</label>
          {{end}}
          <input class="form-control {{with .Form.Errors.Get " email"}} is-invalid {{end}}" id="email" name="email"
            value="{{$res.Email}}" type="email" autocomplete="off" required>
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          {{with .Form.Errors.Get "phone"}}
          <label class="text-danger">{{.}}</label>
          {{end}}
          <input class="form-control {{with .Form.Errors.Get " phone"}} is-invalid {{end}}" id="phone" name="phone"
            value="{{$res.Phone}}" type="text" autocomplete="off" required>
        </div>
        <input type="submit" class="btn btn-primary me-2" value="Save"></input>
        <a href="/admin/reservations-{{$src}}" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</div>
{{end}}